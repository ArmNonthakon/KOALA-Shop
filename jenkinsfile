pipeline {
    agent none
    stages {
        stage('Deploy') {
            steps {
                agent{
                    docker{image 'docker:latest'}
                }
                script {
                    sh 'docker-compose up -d'
                }
            }
        }
        stage('Down') {
            steps {
                agent{
                    docker{image 'docker:latest'}
                }
                script {
                    sh 'docker-compose down --rmi all'
                }
            }
        }
    }
}
